@model Vaccinator.Models.Injection

@{ ViewData["Title"] = "Create"; }

<h1>Create</h1>

<h4>Injection</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marque" class="control-label"></label>
                <input asp-for="Marque" class="form-control" />
                <span asp-validation-for="Marque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroLot" class="control-label"></label>
                <input asp-for="NumeroLot" class="form-control" />
                <span asp-validation-for="NumeroLot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateRappel" class="control-label"></label>
                <input asp-for="DateRappel" class="form-control" type="date" />
                <span asp-validation-for="DateRappel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personne" class="control-label"></label>
                @Html.DropDownListFor(model => model.Personne, (SelectList)ViewData["listeDesPersonnes"], "Selectionnez une personne", new { @class = "form-control" })
                <span asp-validation-for="Personne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vaccin" class="control-label"></label>
                @Html.DropDownListFor(model => model.Vaccin, (SelectList)ViewData["listeDesVaccins"], "Selectionnez un vaccin", new { @class = "form-control" })
                <span asp-validation-for="Vaccin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}